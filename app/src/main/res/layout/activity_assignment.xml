<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uottawa.cali.AssignmentActivity"
    android:orientation="vertical"
    android:padding="0dp">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="?attr/colorPrimary"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:background="@android:color/transparent"
            android:tint="@color/white"
            android:scaleType="fitXY"
            android:layout_gravity="right"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:paddingBottom="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">
            <LinearLayout
                android:id="@+id/courseBackgroundAssignment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/courseColor1"
                android:orientation="horizontal"
                android:onClick="changeCourse">
                <TextView
                    android:id="@+id/courseTextViewAssignment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dynamic_text_unset"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_heading_1"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
            <EditText
                android:id="@+id/nameEditTextAssignment"
                android:hint="@string/name_header_assignment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_heading_1"
                android:textColor="@color/textEmphasis"
                android:focusable="false"
                android:onClick="enableEditText" />
            <TextView
                android:id="@+id/completeTextViewAssignment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/complete_header_assignment"
                android:textSize="@dimen/text_heading_2"
                android:paddingTop="@dimen/padding_divider_assignment"
                android:textColor="@color/textMediumEmphasis"/>
            <SeekBar
                android:id="@+id/completeSeekBarAssignment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_divider_assignment">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/due_header_assignment"
                    android:textSize="@dimen/text_heading_2"
                    android:textColor="@color/textMediumEmphasis"/>
                <TextView
                    android:id="@+id/dueTextViewAssignment"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dynamic_text_unset"
                    android:textSize="@dimen/text_heading_2"
                    android:textColor="@color/textMediumEmphasis"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_divider_assignment">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/priority_header_assignment"
                    android:textSize="@dimen/text_heading_2"
                    android:textColor="@color/textMediumEmphasis"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">
                    <ImageButton
                        android:id="@+id/priorityButton1Assignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_p1"
                        android:background="@android:color/transparent"
                        android:tint="@color/colorGray"
                        android:onClick="changePriority"/>
                    <ImageButton
                        android:id="@+id/priorityButton2Assignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_p2"
                        android:background="@android:color/transparent"
                        android:tint="@color/colorGray"
                        android:onClick="changePriority"/>
                    <ImageButton
                        android:id="@+id/priorityButton3Assignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_p3"
                        android:background="@android:color/transparent"
                        android:tint="@color/colorGray"
                        android:onClick="changePriority"/>
                    <ImageButton
                        android:id="@+id/priorityButton4Assignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_p4"
                        android:background="@android:color/transparent"
                        android:tint="@color/colorGray"
                        android:onClick="changePriority"/>
                    <ImageButton
                        android:id="@+id/priorityButton5Assignment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_p5"
                        android:background="@android:color/transparent"
                        android:tint="@color/colorGray"
                        android:onClick="changePriority"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_divider_assignment">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/type_header_assignment"
                    android:textSize="@dimen/text_heading_2"
                    android:textColor="@color/textMediumEmphasis"/>
                <TextView
                    android:id="@+id/typeTextViewAssignment"
                    android:onClick="changeType"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dynamic_text_unset"
                    android:textSize="@dimen/text_heading_2"
                    android:textColor="@color/textMediumEmphasis"/>
            </LinearLayout>
            <EditText
                android:id="@+id/descriptionEditTextAssignment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_paragraph"
                android:paddingTop="@dimen/padding_divider_assignment"
                android:textColor="@color/textMediumEmphasis"
                android:hint="@string/description_hint_assignment"
                android:focusable="false"
                android:onClick="enableEditText"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_divider_assignment">

                <LinearLayout
                    android:id="@+id/addFileButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="addFile">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_attach" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Add File"
                        android:gravity="center_vertical"
                        android:textColor="@color/textMediumEmphasis"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="addLink">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_link"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Add Link"
                        android:gravity="center_vertical"
                        android:textColor="@color/textMediumEmphasis"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/attachmentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="File 1"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linkLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/link1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Link 1"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
